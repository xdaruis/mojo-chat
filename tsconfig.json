{
  "compilerOptions": {
    "allowJs": true,
    "checkJs": true,
    "noEmit": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "target": "ESNext",
    "module": "ESNext",
    "typeRoots": ["./server/types", "./node_modules/@types"]
  },
  "include": [
    "**/*.js",
    "server/types/**/*.d.ts"
  ]
}