{
  "compilerOptions": {
    "allowJs": true,
    "checkJs": true,
    "noEmit": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "target": "ESNext",
    "module": "ESNext",
    "typeRoots": ["./server/types", "./node_modules/@types"],
    "strict": true,
    "noImplicitAny": true,
    "strictFunctionTypes": true,
    "strictNullChecks": true,
    "noUncheckedIndexedAccess": true,
    "skipLibCheck": true
  },
  "include": [
    "**/*.js",
    "server/types/**/*.d.ts"
  ],
  "exclude": [
    "server/test",
    "client",
    "node_modules"
  ]
}
