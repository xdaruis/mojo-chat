generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Provider {
  GOOGLE
}

model users {
  id        Int      @id @default(autoincrement())
  // TODO: Manually add case insensitive unique constraint on username
  // so the DB is 100% safe from duplicate usernames (case insensitive)
  username  String   @unique
  email     String
  uuid      String
  provider  Provider
  createdAt DateTime @default(now())

  @@unique([provider, uuid])
}
